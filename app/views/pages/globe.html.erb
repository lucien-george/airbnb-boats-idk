 <script>
      function initialize() {
        var earth = new WE.map('earth_div');
        WE.tileLayer('http://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png').addTo(earth);

        <% @boats.each do |boat| %>
        var marker = WE.marker([<%= boat.latitude %>, <%= boat.longitude %>]).addTo(earth);
        marker.bindPopup("<b><%= boat.name %></b><br><%= boat.location %><br /><span style='font-size:10px;color:#999'><%= boat.capacity %></span>", {maxWidth: 150, closeButton: true}).openPopup();

        var markerCustom = WE.marker([50, -9], '/img/logo-webglearth-white-100.png', 100, 24).addTo(earth);
        <% end %>

        earth.setView([51.505, 0], 2.3);
      }
    </script>
<div id="earth_div" style="width:90vw;height:90vh;"></div>


