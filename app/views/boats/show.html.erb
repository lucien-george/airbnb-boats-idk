<div class="wrapper">
  <div class="container">
    <div class="row text-center" >
      <div class="col-sm-12">
        <div class="boat-info">
          <h1 id="boat-name"><%= @boat.name.upcase %></h1>
          <ul>
            <% @boat.photos.each do |photo| %>
              <li><%= cl_image_tag photo.url, height: 300, width: 400, crop: :fill %></li>
            <% end %>
          </ul>
          <ul>
            <li><strong>LOCATION:</strong> <%= @boat.location.upcase %></li>
            <li><strong>CAPACITY:</strong> <%= @boat.capacity %></li>
            <li><strong>YACHT LENGTH:</strong> <%= @boat.length %></li>
            <li><strong>PRICE PER WEEK:</strong> <%= @boat.price_per_week %></li>
            <li><strong>BOAT TYPE:</strong> <%= @boat.category.upcase %></li>
          </ul>
        </div>
        <div class="btn-show">
          <button type="button" class="btn btn-default btn-homepage" data-toggle="modal" data-target="#exampleModalCenter">
            BOOK NOW
          </button>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="show-info">
        <div class="show-left">
          <h2>DESCRIPTION</h2>
          <p><%= @boat.description.upcase %></p>
          <h2>LOCATION</h2>
        </div>
        <div class="review-form show-right">
          <%= form_for [@boat, @review] do |f| %>
          <%= f.label :content, 'CONTENT' %>
          <%= f.text_field :content, class:"form-control", required: true %>
          <%= f.label :rating, 'RATING' %>
          <%= f.select :rating, (1..5), class:"form-control", required: true %>
          <%= f.submit 'ADD REVIEW', class:"btn btn-default btn-homepage" %>
          <% end %>
        </div>
      </div>
    </div>
    <div>
      <% @boat.reviews.each do |review| %>
      <p><%= review.content %> - <%= review.rating %></p>
      <% end %>
    </div>
  </div>
</div>
<div class="practice"></div>



<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="exampleModalLongTitle">BOOK THIS BOAT</h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_for [@boat, @booking] do |f| %>
      <div class="modal-body">
        <div class="form-group">
          <%= f.label :start_date, 'CHECK IN' %>
          <%= f.date_select :start_date, class:"form-control input" %>
        </div>
        <div class="form-group">
          <%= f.label :end_date, 'CHECK OUT' %>
          <%= f.date_select :end_date, class:"form-control input" %>
        </div>
        <div class="form-group">
          <%= f.label :guests, 'GUESTS' %>
          <%= f.select :guests, (1..10), class:"form-control input" %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit 'BOOK!', class:"btn btn-default btn-homepage" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
<%= render 'shared/modal' %>
<%= content_for(:after_js) do %>
<script>
    $( document ).ready(function() {
      $('.show-carousel').slick({
        infinite: true,
        slidesToShow: 3,
        slidesToScroll: 1,
        arrows: true,
        autoplay: true,
      });
    });
  </script>
  <% end %>
