
<div class="container" style="margin-top: 180px; height: 700px;">
  <div class="row">
    <% @boats.each do |boat| %>
      <div class="col-xs-12 col-sm-6">
        <div class="blog-card boat-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.pexels.com/photos/163236/luxury-yacht-boat-speed-water-163236.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260')">
          <div class="title-content">
            <h3>LUCIEN</h3>
          </div>
          <div class="card-info">
            <p>LEBANON</p>
            <p>SAIL BOAT</p>
            <p><i class="fas fa-users"></i> 7</p>
            <p><i class="fas fa-pound-sign"></i> 899pw</p>
            <p>length: 100m</p>
          </div><!-- /.card-info -->
          <!-- overlays -->
          <div class="gradient-overlay"></div>
          <div class="color-overlay"></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
