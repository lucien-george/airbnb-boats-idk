<% if notice %>
  <div class="message-button alert-info">
    <div class="alert alert-info alert-dismissible" style="z-index: 10;" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= notice %>
    </div>
  </div>
<% end %>
<% if alert %>
  <div class="message-button alert-warning">
    <div class="alert alert-warning alert-dismissible" style="z-index: 10;" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= alert %>
    </div>
  </div>
<% end %>
