<div class="bookings-wrapper">
  <div class="container">
    <div class="row">
      <div class="redbox">
        <h1>YOUR BOOKING WITH <strong>PORTS</strong> HAS BEEN SUCCESSFUL.</h1>
        <p>BOOKED BY <strong><%= @booking.user.name.upcase %></strong></p>
      </div>
    </div>
    <div class="row">
      <div class="bluebox">
        <div id="date">
          <div class="start-date">
            <div>
            <p>YOUR JOURNEY STARTS ON </p>
            </div>
            <div>
              <strong><%= @booking.start_date.strftime('%b %d, %Y').upcase %> </strong>
            </div>
          </div>
          <div class="end-date">
            <div>
              <p>YOUR JOURNEY ENDS ON </p>
            </div>
            <div>
             <strong><%= @booking.end_date.strftime('%b %d, %Y').upcase %></strong>
            </div>
          </div>
        </div>
        <hr>
        <div id="description">
          <p><strong>PORT OF DEPARTURE:</strong> <%= @booking.boat.location.upcase %></p>
          <p><strong>NUMBER OF GUESTS:</strong> <%= @booking.guests %></p>
          <p> YOU HAVE SUCESSFULLY BOOKED BOAT:  <strong><em><%= @booking.boat.name.upcase %></em></strong></p>
        </div>
        <div id="pricing">
          <p><strong>TOTAL PRICE:</strong> Â£<%= number_with_delimiter(@boat.price_per_week, delimiter: ',') %></p>
          <em><p id="thankyou">HAVE THE MOST AMAZING TRIP FROM EVERYONE HERE AT <strong>PORTS</strong>.</p></em>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>

